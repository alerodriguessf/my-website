---
const email = "alerodriguessf@gmail.com";
---

<section id="contact" style="
  max-width: 880px;
  margin: 4rem auto 2rem auto;
  padding: 0 1rem;
  font-family: Helvetica, sans-serif;
  color: #fff;
">
  <p style="font-size: 2rem; color: #aaa; margin-bottom: 0.75rem;">
    get in touch
  </p>

  <h2 style="
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    font-weight: bold;
    line-height: 1.2;
    word-break: break-word;
  ">
    <a href={`mailto:${email}`} style="color: white; text-decoration: none;">
      {email}
    </a>
  </h2>

  <button 
    onclick={`navigator.clipboard.writeText('${email}'); alert('Email copied to clipboard!');`}
    style="
      background: transparent;
      border: 1px solid #fff;
      color: #fff;
      padding: 0.5rem 1.25rem;
      border-radius: 2rem;
      font-size: 0.9rem;
      cursor: pointer;
      transition: background 0.2s ease;
    "
    onmouseover="this.style.background='#222'" 
    onmouseout="this.style.background='transparent'"
  >
    Copy email address
  </button>
</section>

<footer style="
  max-width: 880px;
  margin: 2rem auto 4rem auto;
  padding: 0 1rem;
  text-align: left;
  color: #a3a0a0;
  font-size: 1.0rem;
  font-family: Helvetica, sans-serif;
  line-height: 1.5;
">
  <p style="margin: 0 0 0.5rem 0;">
    website hand coded with <strong style="color: #a3a0a0; text-decoration: underline;">Astro</strong> (v5.10.1)
  </p>
</footer>
